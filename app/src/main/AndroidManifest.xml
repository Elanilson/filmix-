    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Filmix">
        <activity
            android:name=".activity.LiberarAppActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SeriesActivity"
            android:exported="false" />
        <activity
            android:name=".activity.TVSmartActivity"
            android:exported="false" />
        <activity
            android:name=".activity.PlayerVideoNativoActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.DownloadActivity"
            android:exported="false"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".activity.CategoriaActivity"
            android:exported="false"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="false"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".activity.PlayerActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.VisualizarActivity"
            android:exported="false"
            android:screenOrientation="userPortrait" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:screenOrientation="userPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6422137823083835~4953626391" />
    </application>

</manifest>